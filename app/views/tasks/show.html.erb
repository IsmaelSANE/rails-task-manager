<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed %>
 <p>[X] This task is completed </p>
<% else %>
 <p>[ ] This task is not completed </p>
<% end  %>
<%= link_to "Back to list", tasks_path %>
<%= link_to "delete", destroy_path(@task), method: :delete %>
<%= link_to "edit", edit_path %>
